runtime bundle/pathogen/autoload/pathogen.vim
execute pathogen#infect()

" most common options:
syntax on
set number
set nocompatible
filetype plugin indent on
set laststatus=2
set hlsearch
set incsearch
set ignorecase

let mapleader=','

set backspace=indent,eol,start
set smartindent
set wildmenu
set nobackup

colorscheme solarized
